{
  "dataset": {
    "path": "/app/data/coursera_dataset_top50/",
    "name": "coursera",
    "max_seq_len": 128,
    "min_seq_len": 64,
    "n_intents": 50
  },
  "model": {
    "embedding": "bert_balanced",
    "pretrained_model_path": "/app/models/bert/",
    "output_size": 1024,
    "n_layers_to_finetune": 0
  },
  "hyperparameters": {
    "optimizer": "adam",
    "loss": "categorical_crossentropy",
    "metrics": [
      "acc"
    ],
    "batch_size": 32,
    "epochs": 100000,
    "shuffle": true,
    "monitor": "val_acc",
    "patience": 10,
    "min_delta": 0.005
  },
  "logging": {
    "tensorboard_root": "/app/logs/tensorboard/",
    "weights_root": "/app/logs/weights/",
    "model_configs_root": "/app/logs/configs/",
    "eval_root": "/app/logs/evals/"
  }
}
