{
  "dataset": {
    "path": "data/coursera_dataset/",
    "name": "coursera",
    "max_seq_len": 128,
    "min_seq_len": 64,
    "n_intents": 100
  },
  "bert": {
    "pretrained_model_path": "models/bert/",
    "output_size": 1024,
    "n_layers_to_finetune": 0
  },
  "hyperparameters": {
    "optimizer": "adam",
    "loss": "categorical_crossentropy",
    "metrics": [
      "acc"
    ],
    "batch_size": 128,
    "epochs": 100000,
    "shuffle": true,
    "monitor": "val_acc",
    "patience": 10,
    "min_delta": 0.005
  },
  "logging": {
    "tensorboard_root": "logs/tensorboard/",
    "weights_root": "logs/weights/",
    "model_configs_root": "logs/configs/"
  }
}